# Server Configuration
PORT=3005
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=event_planner_scans
DB_USER=postgres
DB_PASSWORD=postgres

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:3000
AUTH_SERVICE_TOKEN=your_auth_service_token

# JWT Configuration
JWT_SECRET=your_jwt_secret_for_validation

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=7

# Ticket Generator Service Configuration
TICKET_GENERATOR_SERVICE_URL=http://localhost:3004
TICKET_GENERATOR_SERVICE_TOKEN=your_ticket_generator_service_token

# QR Code Validation Configuration
QR_CODE_SECRET_KEY=your_qr_code_secret_key
QR_CODE_NONCE_EXPIRY=300
QR_CODE_SIGNATURE_EXPIRY=3600
QR_CODE_MAX_SCANS_PER_TICKET=5

# Offline Configuration
OFFLINE_SYNC_INTERVAL=60000
OFFLINE_CACHE_TTL=86400000
OFFLINE_BATCH_SIZE=1000
OFFLINE_BACKUP_INTERVAL=3600000

# Checkpoint Configuration
CHECKPOINT_SYNC_INTERVAL=30000
CHECKPOINT_STATS_RETENTION=2592000000
CHECKPOINT_MAX_OFFLINE_SCANS=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SCAN_RATE_LIMIT=20_PER_MINUTE

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs

# Security
API_KEY=your_scan_validation_service_api_key
WEBHOOK_SECRET=your_webhook_secret

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9095

# Validation Configuration
VALIDATION_CACHE_TTL=300000
VALIDATION_RETRY_ATTEMPTS=3
VALIDATION_TIMEOUT=5000

# Statistics Configuration
STATS_AGGREGATION_INTERVAL=60000
STATS_RETENTION_PERIOD=2592000000
STATS_REAL_TIME_UPDATES=true

# Event Configuration
EVENT_TYPE_VALIDATION=true
EVENT_STATUS_VALIDATION=true
EVENT_CAPACITY_VALIDATION=true
EVENT_TIMEZONE_VALIDATION=true

# Security Configuration
ANTI_FRAUD_ENABLED=true
ANTI_FRAUD_THRESHOLD=10
ANTI_FRAUD_TIME_WINDOW=300000
ANTI_FRAUD_BLACKLIST_TTL=86400000

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_WEBHOOK_URL=http://localhost:3002/api/notifications/webhooks/scan
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3

# Performance Configuration
VALIDATION_CONCURRENCY=10
OFFLINE_SYNC_CONCURRENCY=5
STATS_CONCURRENCY=3

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
